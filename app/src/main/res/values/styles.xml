<resources>

    <!-- Base Toolbar Style -->
    <style name="ToolBarStyle">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <!-- Base toolbar title text style -->
    <style name="ToolbarTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:paddingLeft">@dimen/toolbar_print_title_leftpadding</item>
        <item name="android:paddingRight">@dimen/toolbar_print_title_rightpadding</item>
        <item name="android:paddingTop">@dimen/toolbar_print_title_toppadding</item>
        <item name="android:paddingBottom">@dimen/toolbar_print_title_bottompadding</item>
    </style>

    <style name="HorizontalMenuParentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="TopMenuParentStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/shape_menu_padding</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:background">@drawable/selector_menu_item</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/shape_menu_padding</item>
    </style>

    <style name="TopMenuDrawableStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
    </style>

    <style name="TopMenuTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|top</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_height</item>
    </style>

    <!-- Icon or checkbox style -->
    <style name="ListViewIconStyle">
        <item name="android:layout_width">@dimen/list_icon</item>
        <item name="android:layout_height">@dimen/list_icon</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/list_icon_rightpadding</item>
        <item name="android:layout_marginLeft">@dimen/list_icon_leftpadding</item>
        <item name="android:layout_marginTop">@dimen/list_icon_toppadding</item>
        <item name="android:layout_marginBottom">@dimen/list_icon_bottompadding</item>
    </style>

    <style name="ListViewSingleTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@drawable/selector_dark_text</item>
        <item name="android:layout_marginLeft">@dimen/list_singletext_leftpadding</item>
        <item name="android:layout_marginRight">@dimen/list_singletext_rightpadding</item>
        <item name="android:layout_marginTop">@dimen/list_singletext_toppadding</item>
        <item name="android:layout_marginBottom">@dimen/list_singletext_bottompadding
        </item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- Header Text Style -->
    <style name="ListViewHeaderTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/list_header_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/list_header_vertical_margin</item>
    </style>

    <style name="SpinnerItemStyle">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="SpinnerItemDropDownStyle">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingLeft">@dimen/spinner_dropdown_padding</item>
        <item name="android:paddingRight">@dimen/spinner_dropdown_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListViewDualTextTopStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@drawable/selector_dark_text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginRight">@dimen/list_dualtexttop_rightpadding</item>
        <item name="android:layout_marginLeft">@dimen/list_dualtexttop_leftpadding</item>
        <item name="android:layout_marginTop">@dimen/list_dualtexttop_toppadding</item>
        <item name="android:layout_marginBottom">@dimen/list_dualtexttop_bottompadding</item>
    </style>

    <style name="ListViewDualTextBottomStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|top</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@drawable/selector_dark_secondary_text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_marginRight">@dimen/list_dualtextbottom_rightpadding</item>
        <item name="android:layout_marginLeft">@dimen/list_dualtextbottom_leftpadding</item>
        <item name="android:layout_marginTop">@dimen/list_dualtextbottom_toppadding</item>
        <item name="android:layout_marginBottom">@dimen/list_dualtextbottom_bottompadding</item>
    </style>

</resources>
